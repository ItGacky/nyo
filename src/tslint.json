{
    "rules": {
        "class-name": true,
		"curly": true,
        "comment-format": [
            false,
            "check-space"
        ],
		"eofline": true,
		"forin": false,
        "indent": [
            true,
            "tabs"
        ],
		"no-arg": true,
		"no-consecutive-blank-lines": true,
		"no-construct": true,
        "no-duplicate-variable": true,
		"no-empty": false,
        "no-eval": true,
        "no-internal-module": true,
		"no-shadowed-variable": false,
        "no-trailing-whitespace": true,
		"no-unused-expression": true,
		"no-use-before-declare": true,
        "no-var-keyword": true,
        "one-line": [
            true,
			"check-catch",
			"check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double"
        ],
		"radix ": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
			"allow-leading-underscore",
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-type"
        ]
    }
}
